{
  "manifest_version": 3,
  "name": "Check Your Links",
  "version": "1.0.0",
  "description": "Advanced Chrome extension for checking link validity with element selection",
  "icons": {
    "16": "assets/icons/icon16.png",
    "48": "assets/icons/icon48.png",
    "128": "assets/icons/icon128.png"
  },
  "permissions": [
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background/background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
        "lib/utils.js",
        "lib/i18n.js",
        "lib/http-checker.js",
        "content/ui-manager.js",
        "content/element-selector.js",
        "content/link-checker.js",
        "content/results-display.js",
        "content/content.js"
      ],
      "css": ["assets/styles/content.css"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_title": "Check Your Links",
    "default_icon": {
      "16": "assets/icons/icon16.png",
      "48": "assets/icons/icon48.png",
      "128": "assets/icons/icon128.png"
    }
  }
}